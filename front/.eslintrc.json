{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier"
    ],
    "parserOptions": {
    "ecmaFeatures": {
        "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
		"react/react-in-jsx-scope": "off",
        "import/no-anonymous-default-export": "off"
      //"no-tabs": ["off", {"allowIndentationTabs": true}]
      //"no-confusing-arrow": ["warning", { "allowParens": false }]
    },
		"ignorePatterns": ["node_modules/"],
		"settings": {
			"react": {
				"version": "detect"
			}
		}
}
